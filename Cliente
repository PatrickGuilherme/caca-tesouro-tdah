using System.Collections.Generic;
using System.Linq;

namespace MercadinhoAPI.Models
{
    public class Cliente
    {
        public string Nome { get; set; }
        public List<Item> ItensComprados { get; set; }
        public decimal ValorPago { get; set; }
        public decimal TotalCompra => ItensComprados.Sum(i => i.Preco);
        public decimal TrocoCorreto => ValorPago - TotalCompra;
    }
}
